          { "type": "graph", "title": "Score by Service", "targets": [ { "expr": "ticketsoon_score" } ] },
          { "type": "table", "title": "Reasons", "targets": [ { "expr": "ticketsoon_reasons" } ] }
        ]
      },
      {
        "title": "Unified Timeline",
        "panels": [
          { "type": "logs", "title": "Event Stream", "targets": [ { "expr": "events_merge" } ] }
